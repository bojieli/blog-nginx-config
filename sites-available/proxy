server {
    listen      80;
    listen	[::]:80;
    server_name shi6proxy.blog.ustc.edu.cn;

    location / {
	proxy_pass http://shi6.net:8000/;
	proxy_set_header  X-Real-IP  $remote_addr;
    }

    access_log /var/log/nginx/proxy.access.log;
    error_log  /var/log/nginx/proxy.error.log;
}

