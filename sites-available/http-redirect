# conf for http redirect domains

server {
    listen 80;
    listen [::]:80;
    
    listen 443;
    listen [::]:443;

    server_name *.bojieli.com bojieli.com;
    
    ssl_certificate     /etc/nginx/ssl-keys/bojieli.com.crt;
    ssl_certificate_key /etc/nginx/ssl-keys/bojieli.com.key;

    access_log /var/log/nginx/blog/access.log logverbose;
    error_log  /var/log/nginx/blog/error.log;

    rewrite ^/(.*)$ http://ring0.me/$1 permanent;
}
